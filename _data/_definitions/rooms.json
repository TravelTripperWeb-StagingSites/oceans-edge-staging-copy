{
  "name": {
    "required": true
  },
  "url_friendly_name": {
    "label": "URL Friendly Name",
    "type": "url_slug"
  },
  "description": {
    "type": "richtext"
  },
  "size": {
    "type": "string",
    "instructions": "Enter room size e.g. '350sq ft'"
  },
  "ada_room": {
    "label": "ADA Compliant",
    "type": "boolean"
  },
  "guest_size_max": {
    "label": "Sleeps",
    "type": "integer"
  },
  "room_category": {
    "type": "model",
    "multiple": true,
    "display_field": "Room Type",
    "model_name": "room_bed_type"
  },
  "view": {
    "type": "select",
    "options": ["Ocean View", "Other"]
  },
  "location": {
    "type": "select",
    "options": ["Building1", "Building2"]
  },
  "amenities": {
    "type": "model",
    "multiple": true,
    "display_field": "name",
    "model_name": "room_amenities",
    "can_create": true
  },
  "featured_image": {
    "type": "image"
  },
  "images": {
    "type": "image",
    "multiple": true
  },
  "video": {
    "type": "image"
  },
  "booking_url": {
    "required": true
  },
  "resort_map_url": {
    "required": true
  },
  "order": {
    "type": "order"
  },
  "__META__": {
    "remote": {
      "type": "reztrip_rooms",
      "key": "reztrip_room_id"
    }
  }
}
